<Window x:Class="UI.sizing.Sizing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sizing" SizeToContent="WidthAndHeight">
    <StackPanel MinWidth="400" MinHeight="400">
        <StackPanel MaxWidth="300" Background="LightGray">
            <Button Name="FirstButton" HorizontalAlignment="Left">First</Button>
            <Button Name="SecondButton" HorizontalAlignment="Left">Second</Button>
        </StackPanel>
        <Button Name="ThirdButton" MinWidth="450" MaxWidth="500">Third</Button>
    </StackPanel>
</Window>
