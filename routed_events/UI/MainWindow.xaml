        <Window x:Class="UI.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:UI="clr-namespace:UI"
                MouseRightButtonDown="Window_MouseRightButtonDown"
                Title="MainWindow" Height="350" Width="525" Name="TheWindow">
    <StackPanel Name="TheMainStackPanel" UI:CustomButton.Click="StackPanel_Click">
        <TextBlock Name="TheText" Height="50" FontSize="32" Margin="10" TextAlignment="Center">This is a block of text foo</TextBlock>
        <Button Name="TheOuterButton">
            <StackPanel>
                <TextBlock>This is the outer button</TextBlock>
                <Button Name="TheInnerButton">This is the inner button</Button>
            </StackPanel>
        </Button>
        <TextBox Name="TheTextBox"></TextBox>
        <UI:CustomButton x:Name="TheCustomButton">
            <UI:CustomButton x:Name="TheInnerCustomButton">Woah, an inner button!  And it's custom!</UI:CustomButton>
        </UI:CustomButton>
    </StackPanel>
</Window>
