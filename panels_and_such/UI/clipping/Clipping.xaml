        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clipping" Height="300" Width="300">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Width="500">
            <Button>Button</Button>
            <Canvas HorizontalAlignment="Left" Width="100" Height="32">
                <Button ClipToBounds="False" Width="500" Height="22" FontSize="32">This is a button with really really reall really extra long text</Button>
            </Canvas>
            <Button>Button</Button>
            <Button>Button</Button>
            <Button>Button</Button>
            <Button>Button</Button>
        </StackPanel>
    </ScrollViewer>
</Window>
