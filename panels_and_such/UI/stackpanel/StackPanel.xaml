<Window x:Class="UI.stackpanel.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StackPanel" Height="300" Width="300">
    <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Left">
        <Button Margin="5" Padding="10" VerticalAlignment="Top" HorizontalAlignment="Right">First</Button>
        <Button>Second</Button>
        <Button>Third</Button>
        <Button>Fourth</Button>
        <Button>Fifth</Button>
    </StackPanel>
</Window>
